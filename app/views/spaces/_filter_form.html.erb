<div>
  <%= form_with url: spaces_path, method: :get, data: { action: "submit->spaces#change", spaces_target: "form" } do |form| %>
    <div class="form-group">
      <%= label_tag :query, 'Search by City or Title' %>
      <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Type here' %>
    </div>
    <div class="form-group">
      <%= label_tag :select_date, 'Booking Date' %>
      <%= date_field_tag :select_date, params[:select_date], class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
